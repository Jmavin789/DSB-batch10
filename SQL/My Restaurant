Â --Staff--
create table staff (
  staff_id int primary KEY,
  staff_name TEXT,
  possition TEXT
);

-- customers -- 
create table customers (
	customer_id TEXT PRIMARY KEY,
  customer_name TEXT, 
  gender TEXT 
);

--Menu--
CREATE TABLE menu (
  menu_id TEXT PRIMARY KEY,
  name TEXT,
  price REAL,
  category TEXT
  );

--Transaction--
CREATE TABLE transactions (
    transactions_id TEXT primary key,
    customer_id TEXT,
    staff_id int,
    menu_id TEXT,
    orders_date datetime
  );

